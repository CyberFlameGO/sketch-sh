{
  "version": 2,
  "name": "sketch",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "docs/package.json",
      "use": "@now/static-build",
      "config": { "distDir": ".docz/dist" }
    }
  ],
  "routes": [
    { "src": "/docs/(.*)", "dest": "/docs/index.html" },
    { "src": "/(.+)\\.(.+)", "dest": "/client/$1.$2" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}
